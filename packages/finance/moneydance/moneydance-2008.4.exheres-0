require checksums [ sha1=[ ${PNV}.tar.gz=08e9f302ef6518eb47e470c33b83fdad7f94769e ] ]

SUMMARY="Cross-platform personal finance manager."
HOMEPAGE="http://moneydance.com"
DOWNLOADS="
    listed-only:
        ${HOMEPAGE}/download/${PV/.*}/Unix/moneydance_other.tar.gz -> ${PNV}.tar.gz
"

LICENCES="moneydance"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    run:
        virtual/jre[>=1.5]
"

BUGS_TO="pioto@exherbo.org"

WORK="${WORKBASE}/${PN}"

src_install() {
    insinto /opt/${PN}
    doins *.jar

    exeinto /opt/${PN}
    doexe moneydance

    dodir /usr/bin
    dosym ../../opt/${PN}/moneydance /usr/bin/moneydance

    insinto /usr/share/pixmaps
    doins *.png *.xpm
}

