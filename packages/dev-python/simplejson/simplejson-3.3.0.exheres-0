require distutils [ python_dep='[>=2.5]' python_sup="2.6 2.7 3.3" ] pypi

SUMMARY="Simple, fast, extensible JSON encoder/decoder for Python"
DESCRIPTION="
simplejson is a simple, fast, complete, correct and extensible JSON
<http://json.org>  encoder and decoder for Python 2.4+. It is pure
Python code with no dependencies, but includes an optional C extension
for a serious speed boost.
"

LICENCES="|| ( MIT AFL-2.1 )"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

UPSTREAM_CHANGELOG="https://github.com/simplejson/simplejson/blob/master/CHANGES.txt"
UPSTREAM_DOCUMENTATION="http://simplejson.readthedocs.org/en/latest/"

BUGS_TO="pioto@pioto.org"

test_one_multibuild() {
    edo ${PYTHON} -B setup.py test
}

